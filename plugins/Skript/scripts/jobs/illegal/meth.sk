    loop {meth::*}:
        destroyTank(loop-value)
    loop {fridge::*}:
        destroyFridge(loop-value)

on join:
    clear {meth::cleaning::%player%}

on quit:
    loop {meth::*}:
        if {meth::%loop-value%::owner} is player:
            destroyTank(loop-value)
    loop {fridge::*}:
        if {fridge::%loop-value%::owner} is player:
            destroyFridge(loop-value)

